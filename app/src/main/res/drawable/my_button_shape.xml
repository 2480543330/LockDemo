<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

<!--    设置按钮的四个角为弧形-->
    <corners android:radius="15dip"/>
<!--    设置里面的文字和按钮四个角之间的间隔-->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        />
<!--    个按钮添加边框线和设置边框粗细-->
    <stroke android:width="3dp"
        android:color="@color/colorAccent"/>
</shape>